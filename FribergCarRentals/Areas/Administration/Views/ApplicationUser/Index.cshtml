@using FribergCarRentals.Mvc.Areas.Administration.Views.ApplicationUser
@model IEnumerable<IndexApplicationUserViewModel>

@{
	ViewData["Title"] = "All Users";
}

<h1>All Users</h1>

<p>
	<a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				IdentityUser
			</th>
			<th>
				Admin Account
			</th>
			<th>
				Customer Account
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (IndexApplicationUserViewModel identityUserIndexViewModel in Model)
		{
			<tr>
				<td>
					<a asp-action="Edit" asp-route-id="@identityUserIndexViewModel.UserId" class="btn btn-outline-primary">
						@identityUserIndexViewModel.Username
					</a>
				</td>
				@if (identityUserIndexViewModel.IsAdmin)
				{
					<td>
						<a asp-controller="Admin" asp-action="Edit" asp-route-id="@identityUserIndexViewModel.AdminId" class="btn btn-outline-primary">
							@identityUserIndexViewModel.AdminName
						</a>
					</td>
				}
				else
				{
					<td>
						<a asp-controller="Admin" asp-action="Create" asp-route-id="@identityUserIndexViewModel.UserId" class="btn btn-outline-secondary">
							Make admin
						</a>
					</td>
				}
				@if (identityUserIndexViewModel.IsCustomer)
				{
					<td>
						<a asp-controller="Customer" asp-action="Edit" asp-route-id="@identityUserIndexViewModel.CustomerId" class="btn btn-outline-primary">
							@identityUserIndexViewModel.CustomerName
						</a>
					</td>
				}
				else
				{
					<td>
						<a asp-controller="Customer" asp-action="Create" asp-route-id="@identityUserIndexViewModel.UserId" class="btn btn-outline-secondary">Make customer</a>
					</td>
				}

			</tr>
		}
	</tbody>
</table>
