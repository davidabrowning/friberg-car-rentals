@using FribergCarRentals.Areas.Administration.Views.Admin
@model EditAdminViewModel

@{
    ViewData["Title"] = "Edit Admin";
}

<h1>Edit Admin</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AdminId" class="control-label"></label>
                <input asp-for="AdminId" class="form-control" readonly />
                <span asp-validation-for="AdminId" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                <a asp-area="Administration" asp-controller="Admin" asp-action="Delete" asp-route-id="@Model.AdminId" class="btn btn-danger">Delete</a>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

