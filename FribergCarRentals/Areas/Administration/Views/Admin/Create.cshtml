@using FribergCarRentals.Mvc.Areas.Administration.Views.Admin
@model CreateAdminViewModel

@{
    ViewData["Title"] = "Create Admin";
}

<h1>Create Admin</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" readonly placeholder="@Model.UserId" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" readonly placeholder="@Model.Username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                <input type="submit" value="Make admin" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

