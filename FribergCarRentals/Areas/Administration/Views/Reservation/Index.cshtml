@using FribergCarRentals.Areas.Administration.Views.Reservation
@model IEnumerable<IndexReservationViewModel>

@{
	ViewData["Title"] = "All Reservations";
}

<h1>All Reservations</h1>

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.StartDate)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.EndDate)
			</th>
			<th>
				Car
			</th>
			<th>
				User
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.StartDate)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.EndDate)
				</td>
				<td>
					@item.Car.Make @item.Car.Model (@item.Car.Year)
				</td>
				<td>
					@item.Customer.FirstName @item.Customer.LastName (@item.Customer.IdentityUser.UserName)
				</td>
				<td>
					<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
