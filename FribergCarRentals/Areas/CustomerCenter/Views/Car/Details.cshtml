@using FribergCarRentals.Mvc.Areas.CustomerCenter.Views.Car
@model DetailsCarViewModel

@{
	ViewData["Title"] = "Car Details";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Car Details</h1>

<div>
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Make)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Make)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Model)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Model)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Year)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Year)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Description)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Description)
		</dd>
		<dt class="col-sm-2">
			Photo(s)
		</dt>
		<dd class="col-sm-10">
			<div id="carPhotoCarousel" class="carousel slide">
				<div class="carousel-inner">
					@for (int i = 0; i < Model.PhotoUrls.Count; i++)
					{
						if (i == 0)
						{
							if (Model.PhotoUrls.ElementAt(i) != string.Empty)
							{
								<div class="carousel-item active">
									<img src="@Model.PhotoUrls.ElementAt(i)" class="d-block w-100" alt="Car photo">
								</div>
							}
							else
							{
								<div class="carousel-item active">
									<img src="~/images/Logo.png" class="d-block w-100" alt="Car photo">
								</div>
							}
						}
						else
						{
							if (Model.PhotoUrls.ElementAt(i) != string.Empty)
							{
								<div class="carousel-item">
									<img src="@Model.PhotoUrls.ElementAt(i)" class="d-block w-100" alt="Car photo">
								</div>
							}
						}

					}
				</div>
				<button class="carousel-control-prev" type="button" data-bs-target="#carPhotoCarousel" data-bs-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="visually-hidden">Previous</span>
				</button>
				<button class="carousel-control-next" type="button" data-bs-target="#carPhotoCarousel" data-bs-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="visually-hidden">Next</span>
				</button>
			</div>
		</dd>
	</dl>
</div>
