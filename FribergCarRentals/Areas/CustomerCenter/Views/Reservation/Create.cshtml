@using FribergCarRentals.Mvc.Areas.CustomerCenter.Views.Reservation
@using FribergCarRentals.Core
@model CreateReservationViewModel

@{
    ViewData["Title"] = "Create Reservation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Reservation</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden asp-for="CustomerId" value="@Model.CustomerId" />
            <div class="form-group">
                <label asp-for="CarId" class="control-label"></label>
                <select asp-for="CarId" class="form-select">
                    @if(Model.PreselectedCarId == 0)
                    {
                        <option selected>Choose a car</option>
                    }
                    else
                    {
                        <option>Choose a car</option>
                    }
                    @foreach (FribergCarRentals.Core.Models.Car car in Model.Cars)
                    {
                        if (Model.PreselectedCarId == car.Id)
                        {
                            <option selected value="@car.Id">#@car.Id: @car.Make @car.Model (@car.Year)</option>
                        }
                        else
                        {
                            <option value="@car.Id">#@car.Id: @car.Make @car.Model (@car.Year)</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <a asp-action="Index" asp-controller="Car" class="btn btn-outline-secondary">Cancel</a>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

