@model IEnumerable<Customer>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
	<a asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(Model => Model.Id)
			</th>
			<th>
				@Html.DisplayNameFor(Model => Model.ApplicationUser)
			</th>
			<th>
				Modify
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (Customer customer in Model)
		{
			<tr>
				<td>
					@customer.Id
				</td>
				<td>
					@customer.ApplicationUser
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@customer.Id">Edit</a> |
					<a asp-action="Details" asp-route-id="@customer.Id">Details</a> |
					<a asp-action="Delete" asp-route-id="@customer.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
